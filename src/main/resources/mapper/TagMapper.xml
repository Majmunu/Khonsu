<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.halo.khonsu.mapper.TagMapper">

    <delete id="deleteArticleTag">
        delete from article_tag where  article_id= #{articleIdId} and tag_id = #{tagId}
    </delete>
    <insert id="setArticleTag">

         insert into article_tag(tag_id,article_id) values( #{tagId},#{articleId})
    </insert>
</mapper>
